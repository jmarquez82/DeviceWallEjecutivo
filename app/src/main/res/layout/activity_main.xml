<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundGrey"
    tools:context="cl.rinno.newdevicewall.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:weightSum="10">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_catalog"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:background="@color/white"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_que_buscas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Qué "
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="buscas_"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_selecciona_filtro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un "
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="filtro para "
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/tv_filter_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="accesorios-equipos"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_selecciona_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona un "
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="plan"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_nombre_filtro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filtro: "
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tv_filter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_filter_results_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_filter_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tv_filter_name_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="50dp"
                    android:text="Apple"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado:"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="35sp" />
                <TextView
                    android:id="@+id/tv_filter_result_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/orange"
                    android:textSize="35sp"
                    android:textStyle="italic|bold" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_buttons_parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/button_devices"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_button_blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/img_equipos" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equipos"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_accessories"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_button_green"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/img_accesorios" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/accesorios"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_plans"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_button_yellow"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/img_planes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/planes"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear_content_filters"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.15">

            <RelativeLayout
                android:id="@+id/relative_content_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="72dp"
                    android:background="@drawable/triangule_blue"
                    android:orientation="horizontal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:paddingTop="80dp">

                    <LinearLayout
                        android:id="@+id/button_marca_filter"
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_devices"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icn_filtro_marca"
                            android:layout_width="45.0dp"
                            android:layout_height="45.0dp"
                            android:src="@drawable/filtro_marca" />

                        <TextView
                            android:id="@+id/text_filtro_marca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/marca"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_pantalla_filter"
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_devices"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icn_filtro_pantalla"
                            android:layout_width="45.0dp"
                            android:layout_height="45.0dp"
                            android:src="@drawable/filtro_pantalla" />

                        <TextView
                            android:id="@+id/text_filtro_pantalla"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/tamaopantalla"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_camara_trasera_filter"
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_devices"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icn_filtro_camara_trasera"
                            android:layout_width="45.0dp"
                            android:layout_height="45.0dp"
                            android:src="@drawable/filtro_camara_trasera" />

                        <TextView
                            android:id="@+id/text_filtro_camara_trasera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/cmaratrasera"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/button_camara_frontal_filter"
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_devices"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icn_filtro_camara_frontal"
                            android:layout_width="45.0dp"
                            android:layout_height="45.0dp"
                            android:src="@drawable/filtro_camara_frontal" />

                        <TextView
                            android:id="@+id/text_filtro_camara_frontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:text="@string/cmaradelantera"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_content_accessory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/greenMint"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="393dp"
                    android:background="@drawable/triangule_green"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingEnd="40dp"
                    android:paddingStart="40dp"
                    android:paddingTop="80dp">

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_accessory">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_accessory">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_accessory">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_filter_accessory">

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_content_plans"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="715dp"
                    android:background="@drawable/triangule_yellow"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="80dp">

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/bg_filter_plans">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/bg_filter_plans">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="220.0dp"
                        android:layout_height="84.0dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:background="@drawable/bg_filter_plans">

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button_arrow_right"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        fresco:placeholderImage="@drawable/orange_right_arrow" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/button_arrow_left"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        fresco:placeholderImage="@drawable/orange_left_arrow" />

    <RelativeLayout
        android:id="@+id/blur_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650dp"
        android:visibility="gone">

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="10dp"
            app:realtimeOverlayColor="#8000" />


        <LinearLayout
            android:id="@+id/linear_close_filters"
            android:layout_width="291dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_button_close_filter"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="74dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cerrar"
                android:textSize="41sp"
                android:textStyle="bold|italic"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="29.29dp"
                android:layout_height="29.32dp"
                android:src="@drawable/close_blur"
                android:layout_marginStart="30dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_filters"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="203dp"
            android:layout_marginEnd="203dp"
            android:layout_above="@id/linear_close_filters"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_above="@id/rv_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="100dp"
            android:paddingEnd="100dp"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/text_selecciona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona la"
                android:textColor="@color/white"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/text_filter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca_"
                android:layout_marginStart="15dp"
                android:textSize="50sp"
                android:textColor="@color/orange"
                android:textStyle="bold|italic"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
