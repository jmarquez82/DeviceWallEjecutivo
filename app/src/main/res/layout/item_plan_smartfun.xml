<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    android:layout_marginStart="43dp"
    android:layout_marginEnd="43dp"
    android:background="@drawable/smartfun_content"
    android:layout_marginTop="12dp"
    >


    <TextView
        android:id="@+id/tv_nombre_plan"
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="Smart Fun"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:includeFontPadding="false"
        android:id="@+id/tv_gb_nombre"
        fontPath="fonts/DINNextLTPro-Bold.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 GB"
        android:textColor="@color/white"
        android:textSize="31sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_nombre_plan"
        app:layout_constraintRight_toRightOf="@+id/tv_nombre_plan"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_plan" />

    <TextView
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="cargo fijo"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_gb_nombre"
        app:layout_constraintRight_toRightOf="@+id/tv_gb_nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_gb_nombre" />

    <TextView
        android:id="@+id/tv_cargo_fijo"
        fontPath="fonts/DINNextLTPro-BoldItalic.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$-"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView30"
        app:layout_constraintRight_toRightOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="MINUTOS"
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/dimGray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_nombre_plan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_minutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ilimitados"
        android:textColor="@color/dimGray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/textView32"
        app:layout_constraintRight_toRightOf="@+id/textView32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57" />

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView32"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.45"
        android:id="@+id/linearLayout6">
        <TextView
            fontPath="fonts/DINNextLTPro-Medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="40sp"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="Cuota de Datos libres"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/dimGray"
        android:textSize="12sp"
        fontPath="fonts/DINNextLTPro-Medium.otf"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout6"
        app:layout_constraintBottom_toBottomOf="@+id/textView32" />

    <TextView
        android:id="@+id/tv_cuota_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 GB"
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:textAllCaps="true"
        android:textColor="@color/dimGray"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView34"
        app:layout_constraintRight_toRightOf="@+id/textView34"
        app:layout_constraintTop_toTopOf="@+id/tv_minutos" />

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView34"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.45"
        android:id="@+id/linearLayout7">
        <TextView
            fontPath="fonts/DINNextLTPro-Medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="40sp"
            android:includeFontPadding="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_cuota_promo"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="2 GB + 30 GB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout7"
        android:gravity="center">
        <TextView
            fontPath="fonts/DINNextLTPro-Medium.otf"
            android:id="@+id/tv_cuota_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 GB"
            android:textSize="25sp"
            android:textColor="@color/dimGray"
            />
        <TextView
            android:textColor="@color/orange"
            fontPath="fonts/DINNextLTPro-Medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + 30 GB"
            android:textSize="25sp"
            />
    </LinearLayout>

    <TextView
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:id="@+id/textView37"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Cuota exclusiva\npara\nmusica y video"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textColor="@color/dimGray"
        app:layout_constraintBottom_toTopOf="@+id/content_cuota_promo"
        app:layout_constraintLeft_toLeftOf="@+id/content_cuota_promo"
        app:layout_constraintRight_toRightOf="@+id/content_cuota_promo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="132dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/fotos_apps"
        app:layout_constraintRight_toRightOf="@+id/content_cuota_promo"
        app:layout_constraintLeft_toLeftOf="@+id/content_cuota_promo"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/content_cuota_promo" />

    <TextView
        fontPath="fonts/DINNextLTPro-BoldItalic.otf"
        android:id="@+id/tv_cuota_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="519.990"
        android:textColor="@color/blue"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.981"
        app:layout_constraintLeft_toRightOf="@+id/textView39" />

    <TextView
        fontPath="fonts/DINNextLTPro-BoldItalic.otf"
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cuota_inicial"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/content_cuota_promo"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toTopOf="@+id/tv_cuota_inicial"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        fontPath="fonts/DINNextLTPro-Medium.otf"
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Cuota Inicial"
        android:textSize="21sp"
        android:textColor="@color/dimGray"
        app:layout_constraintBottom_toTopOf="@+id/tv_cuota_inicial"
        app:layout_constraintLeft_toLeftOf="@+id/tv_cuota_inicial"
        app:layout_constraintRight_toRightOf="@+id/tv_cuota_inicial"
        app:layout_constraintHorizontal_bias="0.508" />

    <LinearLayout
        android:id="@+id/linear_ver_promo"
        android:layout_width="109dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_cuota_inicial"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Promo_"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            fontPath="fonts/DINNextLTPro-Medium.otf"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>