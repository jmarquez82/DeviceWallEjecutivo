<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="169dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imagenBasePlanControl"
        android:layout_width="1044dp"
        android:layout_height="164dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/_5gb"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        fresco:actualImageScaleType="center"/>

    <TextView
        android:id="@+id/pagoInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="234dp"
        android:layout_marginTop="8dp"
        android:text="389.990"
        android:textColor="#353535"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imagenBasePlanControl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"/>


    <TextView
        android:id="@+id/pagoCuota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="8dp"
        android:text="20.000"
        android:textColor="#353535"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imagenBasePlanControl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928"/>
</android.support.constraint.ConstraintLayout>